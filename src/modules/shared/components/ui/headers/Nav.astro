---
import type { ILink } from '@/interfaces/link.interface'
import NavLink from './NavLink.astro'

interface Props {
  links: ILink[]
}

const { links } = Astro.props as Props
---

<nav
  class:list={[
    'flex flex-col items-center justify-center gap-2 px-2',
    'md:flex-row md:gap-4',
  ]}
>
  {
    links.map( ( link ) => (
      <NavLink
        link={ link }
      />
    ) )
  }
</nav>
